@model IEnumerable<Cart>

<section class="h-100">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0">Shopping Cart</h3>
                    <div>
                        <p class="mb-0">
                            <span class="text-muted">Sort by:</span> <a href="#!" class="text-body">
                                price <i class="fas fa-angle-down mt-1"></i>
                            </a>
                        </p>
                    </div>
                </div>

                @foreach (var item in Model)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="~/images/@item.Movie.MainImg"
                                         class="img-fluid rounded-3" alt="Cotton T-shirt">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.Movie.Name</p>
                                    @* <p><span class="text-muted">Description: @item.Movie.Description</span></p> *@
                                    <p><span class="text-muted">Category: @item.Movie.category.Name</span></p>
                                    <p><span class="text-muted">Cinema: @item.Movie.ciinema.Name</span></p>


                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <a asp-action="IncrementMovie" asp-route-movieId="@item.MovieId" class="btn btn-outline-secondary">+</a>


                                    <a asp-action="DecrementMovie" asp-route-movieId="@item.MovieId" class="btn btn-outline-secondary">-</a>
                                </div>

                                <input id="form1" min="0" name="quantity" value="@item.Count" type="number" style="max-width: 3rem"
                                       class="form-control form-control-sm" />


                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">
                                        @* @item.Price.ToString("c") *@
                                        @(item.Price* item.Count)
                                    </h5>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a asp-action="DeleteMovie" asp-route-movieId="@item.MovieId" class="btn btn-outline-danger">Delete</a>
                                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="card mb-4">
                    <div class="card-body p-4 d-flex flex-row">
                        <form asp-action="Index">
                            <div data-mdb-input-init class="form-outline flex-fill">
                                <input name="code" type="text" id="form1" class="form-control form-control-lg" />
                                <label class="form-label" for="form1">Discound code</label>
                            </div>
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-warning btn-lg ms-3">Apply</button>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <a asp-action="Pay" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-block btn-lg">Proceed to Pay</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


