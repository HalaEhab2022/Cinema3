@model CategoriesWithCiinemasVM

<div class="container">

    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2>Edit Movie</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleInputName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="exampleInputName" name="name" value="@Model.Movie.Name">
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="leave a description here" style="height: 100px;" id="description" name="description">@Model.Movie.Description</textarea>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        @if (Model.Movie.Status)
                        {
                            <option value="true" selected>Active</option>
                            <option value="false">InActive</option>
                        }
                        else
                        {
                            <option value="true">Active</option>
                            <option value="false" selected>InActive</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="ticketPrice" class="form-label">Ticket Price</label>
                    <input type="text" class="form-control" id="ticketPrice" name="ticketPrice" value="@Model.Movie.TicketPrice">
                </div>

                <div class="mb-3">
                    <label for="img" class="form-label">Img</label>
                    <input type="file" class="form-control" id="img" name="img" accept="image/*" onchange="previewImage(event)" value="@Model.Movie.MainImg">
                </div>
                <div class="mb-3">
                    <img id="preview" src="~/images/@Model.Movie.MainImg" alt="Current Image" style="max-width: 200px; border:1px solid #ccc; padding:5px;
                        border-radius:10px;" />
                </div>

                <div class="mb-3">
                    <label for="subImgs" class="form-label">sub Imgs</label>
                    <input type="file" class="form-control" id="subImgs" name="subImgs" accept="image/*" multiple>
                </div>
                @if (Model.Movie.subImages.Any())
                {
                    foreach (var item in Model.Movie.subImages)
                    {
                        <div class="mb-3" style="display: inline-block; position: relative">
                            <img id="preview" src="~/images/movie-images/@item.Img" alt="Current Image" style="width: 150px; border:1px solid #ccc; padding:5px;
                                        border-radius:10px;" />
                            <a href="/Admin/Movie/DeleteSubImg?movieId=@Model.Movie.Id&Img=@item.Img" type="button" class="btn btn-danger btn-sm removeImg"
                               style="position:absolute; top:5px; right:5px;">X</a> 
                        </div>
                    }
                }

                <div class="mb-3">
                    <label for="dateTime" class="form-label">Date Time</label>
                    <input type="datetime" class="form-control" id="dateTime" name="dateTime" value="@Model.Movie.DateTime">
                </div>

                <div class="mb-3">
                    <label for="categoryId" class="form-label">Category</label>
                    <select class="form-select" id="categoryId" name="categoryId">
                        @foreach (var item in Model.Categories)
                        {
                            @if (item.Id == Model.Movie.CategoryId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>


                <div class="mb-3">
                    <label for="ciinemaId" class="form-label">Cinema</label>
                    <select class="form-select" id="ciinemaId" name="ciinemaId">
                        @foreach (var item in Model.Ciinemas)
                        {
                            @if (item.Id == Model.Movie.CiinemaId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>

                @* <div class="mb-3">
                    <label for="actorId" class="form-label">Actors</label>
                    <ul>
                        @foreach (var actorMovie in Model.Movie.ActorMovies)
                        {
                            <li>@Model.Actors.</li>
                        }
                    </ul>
                </div> *@


                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>


<script>
    function previewImage(event){
        const input= event.target;
        const preview= document.getElementById("preview");
        if(input.files && input.files[0]){
            const reader= new FileReader();
            reader.onload= function(e){
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }



    const container = document.getElementById("colorContainer");
    const addBtn = document.getElementById("addButtonColor");
    addBtn.addEventListener('click', ()=> {
        var colorRow= document.createElement('div')
        colorRow.className= 'mb-2 d-flex align-item-center'
        colorRow.innerHTML= `
         <input type="color" class="form-control form-control-color" id="color" name="colors">
         <button type="button" class="btn btn-danger btn-sm removeColor">X</button>
        `
        container.appendChild(colorRow)
    })
    container.addEventListener('click',(e)=>{
        if(e.target.classList.contains('removeColor')){
            e.target.parentElement.remove()
        }
    })
</script>

 

