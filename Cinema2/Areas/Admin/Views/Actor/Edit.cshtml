@model Actor

<div class="container">

    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2>Edit Actor</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleInputName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="exampleInputName" name="name" value="@Model.Name">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="leave a description here" style="height: 100px;" id="description" name="description">@Model.Description</textarea>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="img" class="form-label">Img</label>
                    <input type="file" class="form-control" id="img" name="img" accept="image/*" onchange="previewImage(event)" value="@Model.Img">
                </div>
                <div class="mb-3">
                    <img id="preview" src="~/images/@Model.Img" alt="Current Image" style="max-width: 200px; border:1px solid #ccc; padding:5px;
                        border-radius:10px;" />
                </div>

                <div class="mb-3">
                    <label for="birthDate" class="form-label">Birth Date</label>
                    <input type="datetime-local" class="form-control" id="birthDate" name="BirthDate"
                           value="@Model.BirthDate.ToString("yyyy-MM-ddTHH:mm")">

                </div>

               
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>


<script>
    function previewImage(event){
        const input= event.target;
        const preview= document.getElementById("preview");
        if(input.files && input.files[0]){
            const reader= new FileReader();
            reader.onload= function(e){
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }


    const container = document.getElementById("colorContainer");
    const addBtn = document.getElementById("addButtonColor");
    addBtn.addEventListener('click', ()=> {
        var colorRow= document.createElement('div')
        colorRow.className= 'mb-2 d-flex align-item-center'
        colorRow.innerHTML= `
         <input type="color" class="form-control form-control-color" id="color" name="colors">
         <button type="button" class="btn btn-danger btn-sm removeColor">X</button>
        `
        container.appendChild(colorRow)
    })
    container.addEventListener('click',(e)=>{
        if(e.target.classList.contains('removeColor')){
            e.target.parentElement.remove()
        }
    })
</script>



